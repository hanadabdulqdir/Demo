<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="25dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/mName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cardView"
            android:layout_marginLeft="141dp"
            android:layout_marginStart="141dp"
            android:layout_marginTop="126dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/mUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/mPassword"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/mPassword"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="21dp"
            android:adjustViewBounds="true"
            android:text="TextView" />

        <TextView
            android:id="@+id/mAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_above="@+id/mPassword"
            android:layout_marginBottom="154dp"
            android:layout_marginLeft="87dp"
            android:layout_marginStart="87dp"
            android:layout_toEndOf="@+id/mPassword"
            android:layout_toRightOf="@+id/mPassword"
            android:text="TextView" />

        <TextView
            android:id="@+id/mPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cardView"
            android:layout_marginLeft="125dp"
            android:layout_marginStart="125dp"
            android:layout_marginTop="68dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/mBirthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cardView"
            android:layout_marginLeft="43dp"
            android:layout_marginStart="43dp"
            android:layout_marginTop="138dp"
            android:text="TextView" />


    </android.support.v7.widget.CardView>

</RelativeLayout>